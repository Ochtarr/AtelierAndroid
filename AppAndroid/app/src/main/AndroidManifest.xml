<?xml version="1.0" encoding="utf-8"?><manifest xmlns:android="http://schemas.android.com/apk/res/android"
package="fac.appandroid">

<!-- Permission: Allow Connect to Internet -->
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
<!-- Permission: Writing to SDCard -->
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
<!-- Permission: Bluetooth -->
<uses-permission android:name="android.permission.BLUETOOTH" />
<uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<!-- Permission: Settings Connections -->
<!--<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> -->

<!-- Permission: Stream wifi P2P -->
<uses-permission android:required="true" android:name="android.permission.ACCESS_WIFI_STATE" />
<uses-permission android:required="true" android:name="android.permission.CHANGE_WIFI_STATE" />
<!--<uses-permission android:required="true" android:name="android.permission.INTERNET" />-->


<!-- min 21 because of settings activity -> getAllNetworks -->
<uses-sdk android:minSdkVersion="21" android:targetSdkVersion="26" android:maxSdkVersion="26" />

<application android:allowBackup="true" android:icon="@mipmap/ic_launcher" android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round" android:supportsRtl="true" android:theme="@style/AppTheme">
    <activity android:name=".MainActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity android:name=".Server">
        <intent-filter>
            <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </activity>

    <activity android:name=".Client" />
    <activity android:name=".Settings" />
    <activity android:name=".ClientWifi">
        <intent-filter>
            <action android:name="android.intent.action.WIFI_P2P_STATE_CHANGED_ACTION" />
            <action android:name="android.intent.action.WIFI_P2P_PEERS_CHANGED_ACTION" />
            <action android:name="android.intent.action.WIFI_P2P_CONNECTION_CHANGED_ACTION" />
            <action android:name="android.intent.action.WIFI_P2P_THIS_DEVICE_CHANGED_ACTION" />
            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </activity>
    <activity android:name=".ServerWifi" />

</application>
</manifest>
